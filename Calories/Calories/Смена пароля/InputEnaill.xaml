<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calories.InputEnaill"
             BackgroundColor="#FF1E1E1E">
    <ContentPage.Content>

        <StackLayout Grid.Row="0" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,120,0,0" Spacing="20">
            <Label Text="Сброс пароля" TextColor="White" FontSize="24" HorizontalOptions="Center"/>

            <Label Text="Введите почту чтобы сменить пароль." TextColor="Gray" FontSize="14" HorizontalTextAlignment="Center" WidthRequest="300" Margin="0,80,0,0"/>
            <Label Text="Почта" TextColor="White" FontSize="12" Margin="0,0,0,5"/>
            <Frame Margin="0,-15,0,0" BorderColor="Transparent" BackgroundColor="#FF333333" CornerRadius="5" Padding="10,0" VerticalOptions="Center" HeightRequest="40" WidthRequest="250">
                <Entry x:Name="EnterEmailChengPassword" Placeholder="Введите почту" TextColor="White" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Margin="0,0,0,-3"/>
            </Frame>
            <Button HorizontalOptions="Center" HeightRequest="40" WidthRequest="150" Text="Подтвердить" BackgroundColor="#FF0078D7" TextColor="White" Margin="0,20,0,10" Clicked="ButtonChekEmail"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>